                array_push($outputContext, $this->crearContexto2('projects/chatboteh-uspjim/agent/sessions/4e1019a0-5db5-3258-d08e-0acd670cb199/contexts/inicio_cerrado', 1));
                array_push($outputContext, $this->crearContexto('projects/chatboteh-uspjim/agent/sessions/4e1019a0-5db5-3258-d08e-0acd670cb199/contexts/nombre', array("nombre" => 'ðŸ‘©â€ðŸ’»'), 1));
                $json['outputContexts'] = $outputContext;
            break;
            case 'ðŸ˜Bueno':
                $json['followupEventInput'] = $this->crearEvento('evento_calificacion_despedida'); 
                $outputContext = array();
                array_push($outputContext, $this->crearContexto2('projects/chatboteh-uspjim/agent/sessions/4e1019a0-5db5-3258-d08e-0acd670cb199/contexts/inicio_cerrado', 1));
                //array_push($outputContext, $this->crearContexto('projects/chatboteh-uspjim/agent/sessions/4e1019a0-5db5-3258-d08e-0acd670cb199/contexts/nombre', array("nombre" => 'ðŸ‘©â€ðŸ’»'), 1));
                $json['outputContexts'] = $outputContext;
            break;
            case 'ðŸ˜•Regular':
                $outputContext = array();
                array_push($outputContext, $this->crearContexto('projects/chatboteh-uspjim/agent/sessions/4e1019a0-5db5-3258-d08e-0acd670cb199/contexts/nombre', array("nombre" => 'ðŸ‘©â€ðŸ’»'), 1));
                $json['outputContexts'] = $outputContext;
            break;
            case 'ðŸ˜£Malo':
                $outputContext = array();
                array_push($outputContext, $this->crearContexto('projects/chatboteh-uspjim/agent/sessions/4e1019a0-5db5-3258-d08e-0acd670cb199/contexts/nombre', array("nombre" => 'ðŸ‘©â€ðŸ’»'), 1));
                $json['outputContexts'] = $outputContext;
            break;
           
        }

    }

